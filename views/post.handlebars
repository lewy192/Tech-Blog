{{#if isPostOwner}}
    {{! add partial here when working }}
    {{> editpost}}
    {{> add-comment}}
    {{> comment}}
    
{{else}}
    <div class="main-content">
        <div class="question-container">
            <div class="question-card">
                <div class="header-container">
                    <h3 class="question-header"><a
                            href="/post/{{post.id}}"
                            class="question-title"
                        >{{post.postTitle}}</a></h3>
                    <span class="question-owner question-details">Posted By
                        {{post.User.username}}
                        on
                        {{format_date post.date}}
                    </span>
                </div>
                <p class="question-content">
                    {{post.postContent}}
                </p>
            </div>
        </div>
        {{#if loggedIn}}
        {{> add-comment}}
        {{/if}}
        {{> comment}}
    </div>

{{/if}}
